<script type="text/javascript">
    

    $(document).ready(function(e){


        $("#btn_integrate").on("click",function(e){


            
            var domain_url = window.location.hostname;  //alert(domain_url);
            var path = "";

            if( domain_url == "localhost" )
                path = "http://" + domain_url + ":8000/";
            else
                path = "http://" + domain_url + "/";


            var bot_id = $("#bot_id").val();
            var html_integrate = '<div align="right"><iframe src="' + path + 'widget/' + bot_id + '" style="border: 0px; overflow:hidden;" width="200" height="600"></iframe></div>';
            $("#lbl_widget").text( html_integrate.toString() ).css({ "font-weight":"bold", "font-size":"14px", "color":"black" });
            $("#CopyWidget").modal("show");




            e.preventDefault();


        });


        try{ e.preventDefault(); }
        catch(ex){}


    });



</script>        


</html>