<html>
    
    <head></head>
    <body>
        
        <div align="center">
        
            
            <h1> Your Details </h1>
            
            
            
            
            <label>First Name</label><br />
            <input type="text" name="f_name" id="fname" /><br /><br />
            
            <label>Last Name</label><br />
            <input type="text" name="l_name" id="lname" /><br /><br />
            
            <label>Password</label><br />
            <input type="password" name="pword" id="pword" /><br /><br />
            
            <label>Confirm Password</label><br />
            <input type="password" name="c_pword" id="c_pword" /><br /><br />
            
            <br />
            <br />
            
            
            <input type="hidden" id="recipient" value="<%= recipient %>" />
            <input type="hidden" id="sender" value="<%= sender %>" />
            <input type="hidden" id="invite_id" value="<%= invite_id %>" />
        
            
            <input type="submit" value="Submit" id="btn_register" />
            
            <a href="/login">Click here to login after registration</a>
            
            
            
        </div>
        
        
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="/js/app.js"></script>
        
        
    </body>
    
</html>

